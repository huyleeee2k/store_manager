@model SV18T1021118.Web.Models.PaginationSearchInput
@{
    ViewBag.Title = "Category";
}
<!-- search form -->
<form id="searchInput" action="~/category/search">
    @Html.HiddenFor(m => m.PageSize)
    <div class="input-group">
        @if (@Session["CATEGORY_NAME"] != null)
        {
            <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên mặt hàng cần tìm" autofocus value="@Session["CATEGORY_NAME"]">
        }
        else
        {
            <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên mặt hàng cần tìm" autofocus value="@Model.SearchValue">
        }
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat btn-primary">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/category/create" class="btn btn-flat btn-success" style="margin-left: 5px"><i class="fa fa-address-book"></i> Bổ sung </a>
        </span>
    </div>
</form>

<div id="searchResult">

</div>

@section scripts{
    <script src="~/Scripts/Search.js"></script>
    <script>
        $(document).ready(function(){
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e){
                e.preventDefault();
                doSearch(1);
                return false;
            });
        });
    </script>
}
