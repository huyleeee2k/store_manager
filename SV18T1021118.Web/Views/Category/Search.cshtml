@model SV18T1021118.Web.Models.CategoryPaginationResults
@{
    Layout = null;
}

@if (Model.RowCount == 0)
{
    <b style="padding-top: 10px;">Không tìm thấy khách hàng nào phù hợp</b>
}
else
{
    <p>
        Có tổng cộng <b>@Model.RowCount</b> khách hàng trên tổng số <b>@Model.PageCount</b> trang
    </p>
    <div class="table-responsive" style="margin-top:20px">
        <table class="table table-bordered table-hover table-striped">
            <thead class="btn-primary">
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Tên giao dịch</th>
                    <th style="width:70px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td class="text-right">
                            <a href="~/category/edit/@item.CategoryID" class="btn btn-xs btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/category/delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div align="center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active">
                        <a>@i</a>
                    </li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }

            }
        </ul>
    </div>
}
