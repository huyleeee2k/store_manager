@model SV18T1021118.Web.Models.SupplierPaginationResult
@{
    Layout = null;
}

@if (Model.RowCount == 0)
{
    <b style="padding-top: 10px;">Không tìm thấy nhà cung cấp nào phù hợp</b>
}
else
{
    <p>
        Có tổng cộng <b>@Model.RowCount</b> nhà cung cấp trên tổng số <b>@Model.PageCount</b> trang
    </p>
    <div class="table-responsive" style="margin-top:20px">
        <table class="table table-bordered table-hover table-striped">
            <thead class="btn-primary">
                <tr>
                    <th>Tên nhà cung cấp</th>
                    <th>Tên giao dịch</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th style="width:70px"></th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Country </td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td class="text-right">
                            <a href="~/supplier/edit/@item.SupplierID" class="btn btn-xs btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/supplier/delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div align="center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active">
                        <a>@i</a>
                    </li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }

            }
        </ul>
    </div>
}