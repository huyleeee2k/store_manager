@model SV18T1021118.DomainModel.Customer
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/customer/save" method="post">
                @Html.HiddenFor(m => m.CustomerID)
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên khách hàng:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autofocus"}) 
                            @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color: #f00; font-style:italic"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
                            @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color: #f00; font-style:italic" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Address, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color: #f00; font-style:italic"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.Country, SelectListHelper.Coutries(), new { @class = "form-control"})
                            @Html.ValidationMessage("Country", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Thành phố:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="City" name="City" value="@Model.City">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã bưu chính</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode">
                        </div>
                    </div>
                    
                    <div class="box-footer">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10" style="color: #f00">
                                    @Html.ValidationSummary()
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-save"></i>Lưu dữ liệu
                                </button>
                                <a href="~/customer" class="btn btn-warning">
                                    <i class="fa fa-ban"></i> Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
</div>

