@model SV18T1021118.Web.Models.ShipperPaginationResult
@{
    Layout = null;
}


@if (Model.RowCount == 0)
{
    <b style="padding-top: 10px;">Không tìm thấy người giao hàng nào phù hợp</b>
}
else
{
    <p>
        Có tổng cộng <b>@Model.RowCount</b> người giao hàng trên tổng số <b>@Model.PageCount</b> trang
    </p>
    <div class="table-responsive" style="margin-top:20px">
        <table class="table table-bordered table-hover table-striped">
            <thead class="btn-primary">
                <tr>
                    <th>Tên người giao hàng</th>
                    <th>SĐT</th>
                    <th style="width:70px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.ShipperName</td>
                        <td>@item.Phone</td>
                        <td class="text-right">
                            <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div align="center">
        <ul class="pagination">
            @*@if (Model.PageCount > 1)
            {*@
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active">
                            <a>@i</a>
                        </li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                    }

                }
            @*}*@
        </ul>
    </div>
    
}

