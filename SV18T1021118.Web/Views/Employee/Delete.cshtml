@model SV18T1021118.DomainModel.Employee

@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">First Name:</label>
                    <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                        <p class="form-control-static">@Model.FirstName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Last Name:</label>
                    <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                        <p class="form-control-static">@Model.LastName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Birth Day:</label>
                    <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                        <p class="form-control-static">@Model.BirthDate</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">NOtes:</label>
                    <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                        <p class="form-control-static">@Model.Notes</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email</label>
                    <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                    <div class="col-sm-10">
                        <img src="~/Images/Employees/@Model.Photo" class="img img-bordered" style="height:250px;">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @if (SV18T1021118.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                        {
                            <p class="text-danger">không được xoá khách hàng này !</p>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-warning">

                                <i class="fa fa-save"></i>Đồng ý xoá
                            </button>
                        }
                        <a href="~/employee" class="btn btn-yahoo">
                            <i class="fa fa-ban"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>