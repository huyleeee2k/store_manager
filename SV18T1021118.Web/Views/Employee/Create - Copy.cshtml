@model SV18T1021118.DomainModel.Employee
@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/employee/save" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.EmployeeID)
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Họ :</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color: #f00; font-style: italic" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên :</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color: #f00; font-style: italic" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày Sinh:</label>
                        <div class="col-sm-10">
                            <input type="date" id="BirthDate" name="BirthDate" value="@Model.BirthDate">
                            @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color: #f00; font-style: italic" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ảnh:</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" id="ImagePath" name="file" value="@Model.Photo" accept="image/*">
                            @if (Model.Photo != null && Model.Photo != "")
                            {
                                <img src="@Model.Photo" style="height:100px;width:170px" />
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ghi chú</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Notes" name="Notes" value="@Model.Notes">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mật khẩu:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">

                                <i class="fa fa-save"></i>Lưu dữ liệu
                            </button>
                            <a href="~/employee" class="btn btn-warning">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>

                </div>


            </form>
        </div>

    </div>


</div>



