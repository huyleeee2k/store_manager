
@{
    ViewBag.Title = "Chỉnh sửa nhân viên";
}

<div class="container-fluid">
    <div class="box box-success">
        <div class="box-header with-border">
        </div>
        <form class="form-horizontal" action="/action_page.php">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="LastName" name="LastName" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="FirstName" name="FirstName" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="BirthDate" name="BirthDate" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" id="image" name="image" accept="image/*">
                    @*<img src="@item.Photo" style="height:100px;width:170px" />*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" name="Email" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="Password" name="Password" autofocus>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Lưu dữ liệu</button>
                    <a href="~/employee" class="btn btn-warning">
                        Hủy bỏ
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
